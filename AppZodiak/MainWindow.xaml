<Window x:Class="AppZodiak.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AppZodiak"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="576" Height="528" Orientation="Vertical" Background="#FF748DF1" >
            <TextBlock Text="Вираховування знаку зодіаку" FontSize="14" Height="24" />
            <StackPanel Height="120" Orientation="Horizontal" Background="#FFCE9A9A" >
                <TextBlock Text="Оберіть дату народження" FontSize="14" VerticalAlignment="Center" />
                <DatePicker Width="120" />
            </StackPanel>
            <Button Content="Button" Height="32" />
            <StackPanel Orientation="Vertical" Background="LightGray" Margin="20" >
                <TextBlock Text="З днем народження" FontSize="14" HorizontalAlignment="Center" />
                <TextBlock x:Name="AgeResult" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ZodiacResult" FontSize="16" HorizontalAlignment="Center"/>
                <TextBlock x:Name="ChineseZodiacResult" FontSize="16" HorizontalAlignment="Center"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
